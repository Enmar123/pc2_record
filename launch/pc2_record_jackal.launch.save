<!--
Launches nodes required for captuiring both colored and non-colored point clouds
-->

<launch>

  <node name="pc2_record" pkg="pc2_record" type="pc2_record" output="screen" >
    <param name="pc2_topic_in"  type="string"  value="/rp" />
    <param name="save_as"       type="string"  value="/home/arc/clouds/jan_2020/jan_27/color/lab-cloud.txt" />
  </node>

  <node pkg="scan_to_pointcloud" type="pc2_to_file.py" name="pc2_to_file_color" output="screen" >
    <param name="target_frame"       value="ekf_odom" />
    <param name="pc2_topic"          value="/pointcloud1" />
    <param name="save_to"            value="/home/arc/clouds/jan_2020/jan_27/plain/" />
    <param name="filetype"           value=".txt" />
  </node>

</launch>
